&spi0 {
    status = "okay";
    cs-gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
};



&spi0 {
    status = "okay";

    /* Der nice_view_adapter mappt das Display auf diesen Knoten */
    nice_view: ls0xx@0 {
        compatible = "sharp,ls0xx";
        reg = <0>; /* Chip select 0 */
        spi-max-frequency = <1000000>;
        /* 0 = hochkant, 1 = 90Â° im Uhrzeigersinn (Landscape) */
        transform-rotation = <1>;
    };
};
