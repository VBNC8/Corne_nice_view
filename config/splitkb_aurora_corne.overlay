/ {
    /* Wir Ã¼berschreiben die Auswahl des Displays auf Systemebene */
    chosen {
        zmk,display = &ls0xx;
    };
};

&spi0 {
    status = "okay";

    /* Wir definieren das Display direkt am SPI-Bus ohne Label-Referenz */
    ls0xx: ls0xx@0 {
        compatible = "sharp,ls0xx";
        reg = <0>;
        spi-max-frequency = <1000000>;
        /* Hier kannst du drehen: 90, 180 oder 270 */
        rotation = <270>;
        width = <160>;
        height = <68>;
    };
};
