&nice_view_spi {
    cs-gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
};

/ {
    left_encoder: encoder_left {
        compatible = "alps,ec11";
        a-gpios = <&gpio0 31 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        b-gpios = <&gpio0 29 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        steps = <80>;
        status = "okay";
    };
};

&left_encoder {
    status = "okay";
};
